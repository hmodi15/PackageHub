<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textBuildingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building Name" />

            <TextView
                android:id="@+id/textBuildingId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID" />

            <TextView
                android:id="@+id/textBuildingIsActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IsActive" />

            <EditText
                android:id="@+id/editBuildingNameText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Edit building name" />

        </LinearLayout>

        <ImageView
            android:id="@+id/buildingImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_apartment_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:id="@+id/spaceNoExtraButton"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Update"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#A03333"
            android:src="@drawable/baseline_delete_24"
            app:tint="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
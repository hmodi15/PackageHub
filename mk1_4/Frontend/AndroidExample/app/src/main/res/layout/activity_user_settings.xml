<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserSettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backFromSettingsBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="14dp"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:id="@+id/settingsTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/settings_logo"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_brown_6"
                android:orientation="vertical"
                android:padding="15dp">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/NightModeIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="12sp"
                        android:src="@drawable/night_mode" />

                    <TextView
                        android:id="@+id/darkModeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="Dark Mode"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/NightModeIcon"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:switchMinWidth="50dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/EditUserLayout">

                    <ImageView
                        android:id="@+id/userInfoIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="12sp"
                        android:src="@drawable/baseline_person_24" />

                    <TextView
                        android:id="@+id/userInfoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="User Information"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/userInfoIcon"/>

                    <ImageView
                        android:id="@+id/UserInfoRightIcon"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="75dp"
                        android:src="@drawable/right_arrow"
                        android:text="Delete Account"
                        android:textStyle="bold"
                        android:textColor="#BA160C"/>




                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commentLayout">

                    <ImageView
                        android:id="@+id/commentIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="12sp"
                        android:src="@drawable/comment" />

                    <TextView
                        android:id="@+id/leaveUsCommentTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="Leave Us A Comment"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/commentIcon"/>

                    <ImageView
                        android:id="@+id/leaveUsCommentRightIcon"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="75dp"
                        android:src="@drawable/right_arrow"
                        android:text="Delete Account"
                        android:textStyle="bold"
                        android:textColor="#BA160C"/>


                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_brown_6"
                android:orientation="vertical"
                android:padding="15dp">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/termsAndConditionsLayout">

                    <ImageView
                        android:id="@+id/termsAndConditionsIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="12sp"
                        android:src="@drawable/contract" />

                    <TextView

                        android:id="@+id/termsAndConditionsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="View Our Terms And Conditions"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/termsAndConditionsIcon"/>

                    <ImageView
                        android:id="@+id/termsAndConditionsRightIcon"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="75dp"
                        android:src="@drawable/right_arrow"
                        android:text="Delete Account"
                        android:textStyle="bold"
                        android:textColor="#BA160C"/>




                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/privacyPolicyLayout">

                    <ImageView
                        android:id="@+id/privacyIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="12sp"
                        android:src="@drawable/baseline_lock_24" />

                    <TextView
                        android:id="@+id/viewPolicyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="View Our Privacy Policy"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/privacyIcon"/>

                    <ImageView
                        android:id="@+id/privacyPolicyRightIcon"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="75dp"
                        android:src="@drawable/right_arrow"
                        android:text="Delete Account"
                        android:textStyle="bold"
                        android:textColor="#BA160C"/>




                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/deleteAccIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="12sp"
                        android:src="@drawable/baseline_delete_forever_24" />

                    <TextView
                        android:id="@+id/deleteAccountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="Delete Account"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/deleteAccIcon"/>

                    <TextView
                        android:id="@+id/deleteAccountBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="75dp"
                        android:text="Delete Account"
                        android:textStyle="bold"
                        android:textColor="#BA160C"/>


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

